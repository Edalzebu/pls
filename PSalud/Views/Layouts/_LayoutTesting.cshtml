@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
        @RenderSection("head", required: false)
        @Html.Partial("_html5shiv")
        @* favicons and touch icons go here *@
    </head>
    <body>
        <div class="navbar navbar-inner navbar-fixed-top affix">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand text-right" href="" ><img class="span2 img-rounded" src="http://www.futecahonduras.com/wp-content/uploads/2013/06/por_salud.jpg"/></a>
                    <div class="masthead-toggle">
                        <ul class="nav nav-pills pull-right">
                            @Html.Navigation()
                        </ul>
                    </div>
                </div>
            </div>
        </div>     
        <div class="row">
            <div class="col-xs-4">
            @{
                Html.RenderAction("ShowNavigation", "Home");
             } 
        </div>
          
        <div class="container" style="margin-top:8%; margin-left: 100px;">
            @Html.Partial("_alerts")
            @Html.Partial("_validationSummary")
            @RenderBody()   
            <hr>
            <footer>
                <p>&copy; Company @System.DateTime.Now.ToString("yyyy")</p>
            </footer> 
        </div>
        </div>
        
         @Scripts.Render("~/js")
         @RenderSection("Scripts", required: false)
    </body>
</html>